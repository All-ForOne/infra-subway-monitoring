<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%fullRequest%n%n%fullResponse</pattern>
        </encoder>
    </appender>

    <appender-ref ref="STDOUT"/>

    <!--spring boot의 기본 logback base.xml은 그대로 가져간다.-->
    <include resource="org/springframework/boot/logging/logback/base.xml"/>
    <include resource="console-appender.xml"/>
    <include resource="member-appender.xml"/>
    <include resource="login-appender.xml"/>
    <include resource="json-appender.xml"/>
    <include resource="path-appender.xml"/>

    <!--    logger name이 console일때 적용할 appender를 등록한다.-->
    <logger name="console" level="TRACE">
        <appender-ref ref="console"/>
    </logger>

    <logger name="login" level="INFO">
        <appender-ref ref="login"/>
    </logger>

    <logger name="member" level="INFO">
        <appender-ref ref="member"/>
    </logger>

    <logger name="path" level="INFO">
        <appender-ref ref="path"/>
    </logger>

    <logger name="json" level="INFO">
        <appender-ref ref="json"/>
    </logger>
</configuration>